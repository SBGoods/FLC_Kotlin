<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="2dp"
        android:top="2dp">
        <shape>
            <corners android:radius="5dp" />
            <solid
                android:color="@color/shadow"
                />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="5dp" />
            <solid
                android:color="@color/background_blue" />
            <stroke
                android:width="3dp"
                android:color="@color/border_blue"/>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>

</layer-list>